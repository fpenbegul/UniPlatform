                            @Html.Raw("<tr style='cursor:pointer;' " + url + "><th scope = 'row'><span style = 'font-size:11px;'> " + item.DuyuruTarihi.ToLongDateString().Replace(" 2019", "").Replace(",", "") + " </span ></th ><td >" + (item.DuyuruBaslik.Length > 30 ? item.DuyuruBaslik.Substring(0, 25) + "..." : item.DuyuruBaslik) + "</td ></tr>");
                        }

                    }
                </tbody>
                <tfoot>

                    <tr> <th></th><th><span style="font-size:13px;">Bütün Soru-Cevap →</span></th></tr>

                </tfoot>
            </table>

        </div>

    </div>
</div>













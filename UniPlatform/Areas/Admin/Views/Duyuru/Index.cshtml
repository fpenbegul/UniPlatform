@using UniPlatform.Models;
@model List<UniPlatform.Models.Duyurular>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>

        <div class="row" style="text-align:center; vertical-align:central; margin-top:50px;">
            <div class="bg-info col-md-12 " style="border-radius:10px;">
                <div class="col-md-12 ">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th align="center">~BÜTÜN DUYURULAR~</th>
                            </tr>
                        </thead>
                        <tbody>



                            @foreach (var item in Model as ICollection<Duyurular>)
                            {
                                string url = "onclick=window.location='" + Url.Action("DuyuruDetay", new { id = item.ID }) + "';";
                                @Html.Raw("<tr style='cursor:pointer;' " + url + "><th scope='row'><span style='font-size:11px;'> " + item.DuyuruTarihi.ToLongDateString().Replace(",", "") + " </span></th><td>" + (item.DuyuruBaslik.Length > 45 ? item.DuyuruBaslik.Substring(0, 45) + "..." : item.DuyuruBaslik) + "</td><td>" + item.ApplicationUser.UserName + "</td></tr>");
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>



    </div>
</body>
</html>
